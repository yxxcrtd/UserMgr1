<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<filter>
		<filter-name>UserFilter</filter-name>
		<filter-class>cn.edustar.usermgr.filter.UserFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>UserFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<context-param>
		<param-name>log4jExposeWebAppRoot</param-name>
		<param-value>/WEB-INF/classes/log4j.properties</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/classes/database.xml, /WEB-INF/classes/applicationContext.xml</param-value>
	</context-param>
	<servlet>
		<servlet-name>JspSupportServlet</servlet-name>
		<servlet-class>org.apache.struts2.views.JspSupportServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.FilterDispatcher</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>struts-cleanup</filter-name>
		<filter-class>org.apache.struts2.dispatcher.ActionContextCleanUp</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts-cleanup</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>cn.edustar.usermgr.servlet.AuthImageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/authimg</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>AppOnLoad</servlet-name>
		<servlet-class>cn.edustar.usermgr.servlet.AppOnLoad</servlet-class>
		<init-param>
			<param-name>TimeOutSec</param-name>
			<param-value>21600</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>AppOnLoad</servlet-name>
		<url-pattern>/servlet/AppOnLoad</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>VerUser</servlet-name>
		<servlet-class>cn.edustar.usermgr.servlet.VerUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>VerUser</servlet-name>
		<url-pattern>/VerUser</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>XmlRpc</servlet-name>
		<servlet-class>cn.edustar.usermgr.servlet.XmlRpcServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>XmlRpc</servlet-name>
		<url-pattern>/xmlrpc</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>UserLogout</servlet-name>
		<servlet-class>cn.edustar.usermgr.servlet.UserLogout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UserLogout</servlet-name>
		<url-pattern>/UserLogout</url-pattern>
	</servlet-mapping>
	

	<!-- 域名设置 -->
	<context-param>
		<param-name>dynamicDomain</param-name>
		<param-value>jitar.com.cn</param-value>
	</context-param>
</web-app>
